<picture>
    <!-- addTemplateClassname.data.root .xxxx = parent context-->
    <source class="owl-lazy" media="(max-width: 399px)"
        srcset="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=400{{#if addTemplateClassname.data.root.mobileAttributesExSmall}}&{{addTemplateClassname.data.root.mobileAttributesExSmall}}{{/if}}">
    <source class="owl-lazy" media="(max-width: 575px)"
        srcset="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=576{{#if addTemplateClassname.data.root.mobileAttributesSmall}}&{{addTemplateClassname.data.root.mobileAttributesSmall}}{{/if}}">
    <source class="owl-lazy" media="(max-width: 767px)"
        srcset="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=768{{#if addTemplateClassname.data.root.tabletAttributes}}&{{addTemplateClassname.data.root.tabletAttributes}}{{/if}}">
    <source class="owl-lazy" media="(max-width: 991px)"
        srcset="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=992">
    <source class="owl-lazy" media="(max-width: 1199px)"
        srcset="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=1200">
    <source class="owl-lazy" media="(max-width: 1439px)"
        srcset="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=1440">
    <source class="owl-lazy" media="(max-width: 2399px)"
        src-retina="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=2400">
    <source class="owl-lazy" media="(max-width: 3039px)"
        src-retina="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=3040">

    <img class="owl-lazy" src="https://{{image.defaultHost}}/i/sw/{{escapeUrl image.name}}{{#if seoText}}/{{escapeUrl
            seoText}}{{/if}}?w=1440"
        alt="{{imageAltText}}">
</picture>
