<section id="HPCarousel">
    <div class="container p-0">
        <div class="row">
            <div class="col-12">
                <div id="{{#if cssStyle}}{{cssStyle}}{{else}}owl-1{{/if}}" class="owl-carousel owl-carousel-hero">
                    <div class="slide slide_{{slideName}}">
                        <div class="overlay-container">
                            <div class="slide-overlay">
                                <div class="slide-text-1">
                                    {{#if header}}
                                        <h2{{#if textColour}} style="color:{{textColour}}"{{/if}}>{{{header}}}</h2>
                                    {{/if}}
                                </div>
                                <div class="slide-text-2">
                                    {{#if subheader}}
                                         <h4 {{#if textColour}} style="color:{{textColour}}"{{/if}}>{{{subheader}}} Â»</h4>
                                    {{/if}}
                                </div>
                                {{#if button.anchorText}}
                                    <div class="slide-button inline-button {{#if buttonStyle}}{{buttonStyle}}{{else}}defaultBtn{{/if}}" >
                                        <a href="{{button.hrefValue}}">{{button.anchorText}}</a>                              
                                    </div>
                                {{/if}}
                            </div>
                        </div>

                        <a href="{{button.hrefValue}}">
                        {{templateChooser slideImage}}
                        </a>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<style>
#HPCarousel  div .overlay-container .slide-overlay {
  bottom: {{#if textPositionBottom}}{{textPositionBottom}}px;{{else}}125px;{{/if}}
  left: {{#if textPositionLeft}}{{textPositionLeft}}px;{{else}}125px;{{/if}}
}
</style>
