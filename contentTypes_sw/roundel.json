{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://paulbrowndfs.github.io/SW/contentTypes_sw/roundel.json",
  "title": "Roundel",
  "description": "Roundel Accelerator",
  "propertyOrder": [
    "roundel",
    "roundelPosition"
  ],
  "type": "object",
  "properties": {
    "roundel": {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
    },
    "roundelPosition": {
      "type": "string",
      "enum": [
        "Top Left",
        "Top Right",
        "Bottom Left",
        "Bottom Right"
      ],
      "title": "Roundel Position",
      "description": "Roundel Position"
    },
    "XAxisOffset": {
      "type": "number",
      "minimum": -1000,
      "maximum": 1000,
      "title": "Left / Right offset in px",
      "description": "Roundel Horizontal Positioning Offset Based On The Above Positioning."
    },
    "YAxisOffset": {
      "type": "number",
      "minimum": -1000,
      "maximum": 1000,
      "title": "Top / Bottom offset in px",
      "description": "Roundel VerticalPositioning Offset Based On The Above Positioning."
    }
  }
}
